<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:padding="8dp">


    <TextView
        android:id="@+id/room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange_primary_500"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/chevron"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_icons8_chevron_right_30"
        android:contentDescription="@string/image_description"
        app:layout_constraintTop_toTopOf="@id/room_title"
        app:layout_constraintBottom_toBottomOf="@id/room_title"
        app:layout_constraintStart_toEndOf="@id/room_title" />


    <androidx.cardview.widget.CardView
        android:id="@+id/single_device_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/secondary_100"
        app:layout_constraintTop_toBottomOf="@id/room_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/device_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_icons8_window_shade_50"
                android:contentDescription="@string/image_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@id/device_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/device_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/gray_600"
                app:layout_constraintStart_toStartOf="@id/device_name"
                app:layout_constraintTop_toBottomOf="@id/device_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>