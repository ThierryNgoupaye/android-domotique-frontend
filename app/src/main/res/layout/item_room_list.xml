<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- En-tête -->
    <TextView
        android:id="@+id/room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salon"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/chevron"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_icons8_chevron_right_30"
        android:contentDescription="@string/image_description"
        app:layout_constraintTop_toTopOf="@id/room_title"
        app:layout_constraintBottom_toBottomOf="@id/room_title"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Liste verticale des devices -->
    <LinearLayout
        android:id="@+id/devices_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/room_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Les mini-cartes seront ajoutées dynamiquement en Kotlin -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>